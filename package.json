{
  "name": "astorytellinggame",
  "version": "0.0.1",
  "description": "A Storytelling Game.",
  "scripts": {
    "format": "prettier --single-quote --write '{client,server,integration}/**/*.js'",
    "start": "webpack client/index.js client-dist/bundle.js && DEBUG=1 node index.js",
    "test": "webpack client/index.js client-dist/bundle.js && jest --testMatch='**/*_test.js'",
    "test-watch": "webpack client/index.js client-dist/bundle.js && jest --testMatch='**/*_test.js' --watch",
    "test-inspect": "webpack client/index.js client-dist/bundle.js && node --inspect-brk ./node_modules/.bin/jest --runInBand --testMatch='**/*_test.js'"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/astorytellinggame/astorytellinggame.git"
  },
  "keywords": [
    "game"
  ],
  "author": "admin@astorytellinggame.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/astorytellinggame/astorytellinggame/issues"
  },
  "homepage": "https://github.com/astorytellinggame/astorytellinggame#readme",
  "devDependencies": {
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "puppeteer": "^0.13.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "hapi": "^17.1.1",
    "inert": "^5.0.1",
    "ws": "^3.3.1"
  },
  "engines": {
    "node": ">=8.9"
  }
}
